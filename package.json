{
  "name": "@uniquid/uidcore",
  "version": "0.1.0",
  "description": "Uniquid Core Js/Ts library",
  "module": "lib/index.js",
  "typings": "lib/types",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/uniquid/uidcore-js"
  },
  "author": "@aleclofabbro",
  "license": "MIT",
  "engines": {
    "node": ">=8.1"
  },
  "scripts": {
    "build": "cat package.json && tsc --rootDir ./ -p tsconfig.json",
    "build:watch": "tsc -w",
    "build:test": "tsc --rootDir ./ -p tsconfig.test.json",
    "clean": "rm -fr lib && rm -rf typings",
    "postinstall": "npm run build",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:only-changed": "npm test -- --bail --onlyChanged",
    "prerelease": "npm run build",
    "release": "standard-version",
    "postrelease": "npm run release:github && npm run release:npm",
    "release:github": "git push --no-verify --follow-tags origin master",
    "release:npm": "npm publish",
    "release:preflight": "irish-pub",
    "release:preflight:package": "npm pack",
    "size": "shx echo \"Gzipped Size:\" && cross-var strip-json-comments --no-whitespace $npm_package_main | gzip-size"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": ".*\\.specs\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "mapCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/",
      "<rootDir>/src/.*(/__tests__/.*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 85
      }
    }
  },
  "dependencies": {
    "@types/jest": "latest",
    "@types/lokijs": "1.5.2",
    "@types/node": "10.11.3",
    "lcoin": "1.0.0-beta.15",
    "lokijs": "1.5.3",
    "mqtt": "2.18.0",
    "simple-get": "2.7.0",
    "typescript": "3.1.1",
    "varuint-bitcoin": "1.1.0"
  },
  "devDependencies": {
    "awesome-typescript-loader": "3.2.1",
    "irish-pub": "latest",
    "jest": "latest",
    "standard-version": "4.2.0",
    "ts-jest": "latest"
  }
}
