{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2018"
    ],
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "pretty": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "typings",
    "baseUrl": "src",
    "stripInternal": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}
